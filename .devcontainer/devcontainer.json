//devcontainer.json
{
    "name": "Jellyfin Devcontainer",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			// Update 'VARIANT' to pick a .NET Core version: 2.1, 3.1, 5.0
			"VARIANT": "5.0",
			// Options
			"INSTALL_NODE": "true",
			"NODE_VERSION": "lts/*",
			"INSTALL_AZURE_CLI": "false"
		}
	},
    "workspaceFolder": "/workspace",
    "workspaceMount": "source=/home/pingwin/development/jellyfin,target=/workspace,type=bind,consistency=cached",
    "extensions": [
        "ms-dotnettools.csharp",
        "mhutchie.git-graph",
        "github.vscode-pull-request-github",
        "editorconfig.editorconfig",
    ],
    "forwardPorts": [
        8096,
        8920,
        1900,
        7359
    ],
    // "postCreateCommand": "apt-get update && apt-get install -y git",
    // "runArgs": [
    //     "--datadir=/config",
    //     "--cachedir=/cache",
    //     "--ffmpeg=/usr/lib/jellyfin-ffmpeg/ffmpeg"
    // ],
    "mounts": [
        "source=vscode-extensions,target=/root/.vscode-server/extensions,type=volume",
        "source=/home/pingwin/development/jellyfin-data,target=/jellyfin-data,type=bind,consistency=cached",
        "source=/storage/torrents,target=/jellyfin-media,type=bind,consistency=cached",
        "source=/home/pingwin/development/jellyfin-kinopoisk,target=/workspace-kinopoisk,type=bind,consistency=cached",
    ],
    "containerEnv": {
        "DOTNET_CLI_TELEMETRY_OPTOUT": "1",
        "DOTNET_HOSTBUILDER__RELOADCONFIGONCHANGE": "false",
        "JELLYFIN_DATA_DIR": "/jellyfin-data",
        "JELLYFIN_WEB_DIR": "/jellyfin-web/dist",
    },
    // "runArgs": [
    //     "--env-file",
    //     ".devcontainer/devcontainer.env"
    // ],
}
